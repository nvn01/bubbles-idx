generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// IDX30 Stock list - pre-populated with all 30 stocks
model Stock {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to history
  history StockHistory[]

  @@index([symbol])
}

// Simplified history: Price and Timestamp only
model StockHistory {
  id       Int      @id @default(autoincrement())
  stockId  Int      @map("stock_id")
  ts       DateTime
  price    Float

  // Relation to Stock
  stock Stock @relation(fields: [stockId], references: [id], onDelete: Cascade)

  @@unique([stockId, ts])
  @@index([stockId, ts])
  @@index([ts])
  @@map("stock_history")
}
