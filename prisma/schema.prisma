generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// IDX30 Stock list - pre-populated with all 30 stocks
model Stock {
  id        String   @id @default(cuid())
  symbol    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to history
  history StockHistory[]

  @@index([symbol])
}

// OHLCV historical data with timestamp
model StockHistory {
  id       String   @id @default(cuid())
  stockId  String   @map("stock_id")
  ts       DateTime // Format: 2026-01-19 13:44:00+00
  open     Float
  high     Float
  low      Float
  close    Float
  volume   BigInt?

  // Relation to Stock
  stock Stock @relation(fields: [stockId], references: [id], onDelete: Cascade)

  @@unique([stockId, ts]) // Prevent duplicate entries for same stock/time
  @@index([stockId, ts])
  @@index([ts])
  @@map("stock_history")
}
